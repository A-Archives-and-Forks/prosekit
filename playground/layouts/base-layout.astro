---
import Nav from './nav.astro'
import 'prosekit/basic/internal/preflight.css'
---

<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>ProseKit Playground</title>
    <style>
      :root {
        font-family: ui-sans-serif, sans-serif, 'Apple Color Emoji',
          'Segoe UI Emoji', 'Segoe UI Symbol', 'Noto Color Emoji', system-ui;
      }
    </style>
  </head>

  <body
    class="w-100vw h-100vh m-0 box-border flex flex-col p-0 md:flex-row divide-y md:divide-x md:divide-y-none divide-stone-200"
  >
    <header class="md:max-w-50 w-full md:h-full" transition:animate="none">
      <Nav />
    </header>
    <main class="flex-1 p-2">
      <slot />
    </main>
  </body>
</html>
